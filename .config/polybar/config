[colors]
top-background = #00ffffff
top-foreground = #70ffffff

bottom-background = #00ffffff
bottom-foreground = #FFD8DEE9

primary = #FF81A1C1
secondary = #e60053
shaded = #00ffffff
alert = #bd2c40
highlight = #cc6eaafb
green = #FFA3BE8C
blue = #FF9BCFE2
darkblue = #FF81A1C1
teal = #FF87B4B3
red = #FFD3737C
yellow = #FFE1C282
purple = #FFB892B1
white = #FFD8DEE9
bg = #8081A1C1

[global/wm]
margin-top = 5
margin-bottom = 5

[bar/topbar]
monitor = ${env:MONITOR:HDMI-A-0}
width = 100%
height = 35
offset-x = 0
offset-y = 0
radius = 0.0
fixed-center = true

background = ${colors.top-background}
foreground = ${colors.top-foreground}

line-size = 0

border-size = 0
border-color = #00000000

padding-left = 5
padding-right = 5

module-margin-left = 2
module-margin-right = 2

font-0 = Fira Sans:size=10;2
font-1 = Material Design Icons:size=10;2
font-2 = Material\-Design\-Iconic\-Font:size=10;2
font-3 = FontAwesome:size=10;2

;modules-left = bitcoin
;modules-center = 
modules-right = volume wlan eth battery date

tray-position = left
tray-padding = 2
tray-background = ${self.background}
tray-detached = true
;tray-background = #0063ff

wm-restack = i3

override-redirect = true

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

[bar/bottombar]
monitor = ${env:MONITOR:HDMI-A-0}
width = 100%
height = 35
offset-x = 0
offset-y = 0
radius = 0.0
fixed-center = true
bottom = true

background = ${colors.bottom-background}
foreground = ${colors.bottom-foreground}

line-size = 0

border-size = 0
border-color = #00000000

padding-left = 5
padding-right = 5

module-margin-left = 2
module-margin-right = 2

font-0 = Fira Sans:size=11;2
font-1 = Material Design Icons:size=14;2
font-2 = Material\-Design\-Iconic\-Font:size=14;2
font-3 = FontAwesome:style=Regular:pixelsize=14

modules-left = i3
modules-right = cpu memory temperature wlan date
modules-center =

override-redirect = true
wm-restack = i3


[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

format-prefix = " "
format-prefix-foreground = ${bar/bottombar.foreground}
format-prefix-underline = ${colors.secondary}

label-layout = %layout%
label-layout-underline = ${colors.secondary}

label-indicator-padding = 2
label-indicator-margin = 1
label-indicator-background = ${colors.secondary}
label-indicator-underline = ${colors.secondary}

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /

label-mounted = %{F#ffffff}%mountpoint%%{F-}: %percentage_used%%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${bar/bottombar.foreground}

[module/i3]
type = internal/i3
format = <label-state>
pin-workspaces = true
strip-wsnumbers = true
index-sort = true
enable-click = true
enable-scroll = false
wrapping-scroll = false
reverse-scroll = false
fuzzy-match = true

label-unfocused = %index%
label-unfocused-padding = 2
label-unfocused-foreground = ${colors.bg}

label-focused = %index%
label-focused-foreground = ${colors.blue}
label-focused-underline = ${colors.green}
label-focused-padding = 2

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.blue}
;label = %percentage%%
label = %percentage%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.teal}
label = %percentage_used%%

[module/wlan]
type = internal/network
interface = wlo1
interval = 3.0

format-connected = <ramp-signal> <label-connected>
format-prefix = 1
format-connected-underline = #9f78e1
label-connected = %essid% (%local_ip%)
;label-connected-foreground = ${colors.green}

;format-disconnected-prefix = " "
;format-disconnected-prefix-font = 3
;format-disconnected = no network
format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${bar/bottombar.foreground}

label-disconnected = 
label-disconnected-font = 3
label-disconnected-foreground = ${colors.red}

ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-font = 3
ramp-signal-foreground = ${colors.green}

[module/eth]
type = internal/network
interface = enp0s20f0u3
interval = 3.0

format-connected-underline = #55aa55
format-connected-prefix = " "
format-connected-prefix-foreground = ${bar/topbar.foreground}
label-connected = %local_ip%

format-disconnected =
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${bar/topbar.foreground}

[module/date]
type = internal/date
interval = 1

date = "%a%e %b"
date-alt = " %Y-%m-%d"

time = "%H:%M"
time-alt = "%H:%M:%S"

format-prefix-foreground = ${bar/topbar.foreground}
format-underline = ${bar/topbar.foreground}

format = <label>
label = %date% %time%
label-font = 1

[module/volume]
type = internal/volume

format-volume = <ramp-volume> <bar-volume>
label-volume = VOL
label-volume-foreground = ${root.foreground}

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
ramp-volume-foreground = ${bar/topbar.foreground}

format-muted-prefix = " "
format-muted-foreground = ${bar/topbar.foreground}
label-muted-foreground = #f8c456
label-muted = "muted"
label-muted-font = 1

bar-volume-width = 10
bar-volume-foreground-0 = #cc6eaafb
bar-volume-foreground-1 = #cc6eaafb
bar-volume-foreground-2 = #cc6eaafb
bar-volume-foreground-3 = #cc6eaafb
bar-volume-foreground-4 = #cc6eaafb
bar-volume-foreground-5 = #cc6eaafb
bar-volume-foreground-6 = #cc6eaafb
bar-volume-gradient = false
bar-volume-indicator = 
bar-volume-indicator-font = 4
bar-volume-indicator-foreground = #cc6eaafb
bar-volume-fill = 
bar-volume-fill-font = 4
bar-volume-empty = 
bar-volume-empty-font = 4
bar-volume-empty-foreground = ${bar/topbar.foreground}

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 70

format = <ramp> <label>
format-underline = #f50a4d
format-warn = <ramp> <label-warn>
format-warn-underline = ${self.format-underline}

label = %temperature-c%
label-warn = %temperature-c%
label-warn-foreground = #f8c456

ramp-0 = 
ramp-font = 3
ramp-foreground = ${colors.yellow}

[module/powermenu]
type = custom/menu

format-spacing = 1

label-open = 
label-open-padding = 1
label-open-foreground = ${bar/topbar.foreground}

label-close = 
label-close-padding = 1
label-close-foreground = ${bar/topbar.foreground}

label-separator = |
label-separator-foreground = ${bar/topbar.foreground}

menu-0-0 = reboot
menu-0-0-exec = menu-open-1
menu-0-1 = power off
menu-0-1-exec = menu-open-2

menu-1-0 = cancel
menu-1-0-exec = menu-open-0
menu-1-1 = reboot
menu-1-1-exec = reboot

menu-2-0 = power off
menu-2-0-exec = poweroff
menu-2-1 = cancel
menu-2-1-exec = menu-open-0

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over

